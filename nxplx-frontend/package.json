{
  "private": true,
  "name": "nxplx-frontend",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "per-env",
    "start:production": "npm run -s serve",
    "start:development": "npm run -s dev",
    "build": "preact build",
    "serve": "preact build && preact serve",
    "dev": "preact watch",
    "lint": "tslint --project src",
    "test": "jest ./tests",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,css,md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "eslint-config-aerian"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "@types/webpack-env": "^1.13.9",
    "css-loader": "^1.0.1",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^8.1.0",
    "per-env": "^1.0.2",
    "preact-cli": "^3.0.0-rc.7",
    "prettier": "^1.15.3",
    "ts-loader": "^3.5.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-consistent-codestyle": "^1.14.1",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.7.5",
    "typings-for-css-modules-loader": "^1.7.0"
  },
  "dependencies": {
    "@snackbar/core": "^1.7.0",
    "@types/got": "^9.6.9",
    "@types/lodash": "^4.14.149",
    "@types/ua-parser-js": "^0.7.33",
    "got": "^10.2.2",
    "linkstate": "^1.1.1",
    "lodash": "^4.17.15",
    "preact": "^10.0.0",
    "preact-helmet": "^4.0.0-alpha-3",
    "preact-markup": "^2.0.0",
    "preact-render-to-string": "^5.0.6",
    "preact-router": "^3.0.1",
    "ua-parser-js": "^0.7.21",
    "unistore": "^3.5.1"
  },
  "peerDependencies": {
    "prettier": ">1.0.0",
    "tslint": ">5.0.0"
  }
}
