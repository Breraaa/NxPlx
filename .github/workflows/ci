name: CI
on:
  push:
    branches:
    - master
jobs:
  ci:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@v1
    - name: Setup .NET Core
      uses: actions/setup-dotnet@v1
      with:
        dotnet-version: 3.1.101
    - name: Set working directory
      run: cd nxplx-backend
    - name: Build with dotnet
      run: dotnet build
    - name: Test with dotnet
      run: dotnet test
